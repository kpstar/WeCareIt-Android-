<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_32dp">
                <TextView
                    android:id="@+id/recyclerview_row_driving_log_time"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_32dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_toLeftOf="@id/recycleview_row_driving_log_edit"/>
                <ImageView
                    android:id="@+id/recyclerview_row_driving_log_delete"
                    android:layout_width="@dimen/width_32dp"
                    android:layout_height="@dimen/height_32dp"
                    android:padding="@dimen/padding_12dp"
                    android:src="@drawable/ic_circle_delete"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
                <ImageView
                    android:id="@+id/recycleview_row_driving_log_edit"
                    android:layout_width="@dimen/width_32dp"
                    android:layout_height="@dimen/height_32dp"
                    android:padding="@dimen/padding_6dp"
                    android:src="@drawable/ic_circle_edit"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/recyclerview_row_driving_log_delete"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/recyclerview_row_driving_log_heading"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_32dp"
                android:gravity="center_vertical" />
            <TextView
                android:id="@+id/recyclerview_row_driving_log_description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_32dp"
                android:gravity="center_vertical" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>