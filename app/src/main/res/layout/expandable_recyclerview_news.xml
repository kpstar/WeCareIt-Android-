<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding_6dp"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorLightGray"
        app:cardCornerRadius="@dimen/distance_6dp"
        app:cardElevation="@dimen/distance_6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_6dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/expandable_recyclerview_news_messanger_profile_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:padding="0dp"
                            android:text="Messenger name"
                            android:gravity="center_vertical"
                            android:layout_alignParentLeft="true"
                            android:layout_toLeftOf="@+id/expandable_recyclerview_news_edit"/>
                        <ImageView
                            android:id="@+id/expandable_recyclerview_news_edit"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ic_edit"
                            android:layout_toLeftOf="@+id/expandable_recyclerview_news_history"
                            android:layout_centerVertical="true"/>
                        <ImageView
                            android:id="@+id/expandable_recyclerview_news_history"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_history"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:text="2018-10-26 05:00"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/expandable_recyclerview_news_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_32dp">
                <ImageView
                    android:id="@+id/expandable_recyclerview_news_comment_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_comment"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />
                <TextView
                    android:id="@+id/expandable_recyclerview_news_comment_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:text="Svara"
                    android:layout_toRightOf="@id/expandable_recyclerview_news_comment_icon"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/expandable_recyclerview_news_comment_dot"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_dot"
                    android:layout_toRightOf="@id/expandable_recyclerview_news_comment_label"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:text="2 svar"
                    android:layout_toLeftOf="@id/expandable_recyclerview_news_comment_add"
                    android:layout_toRightOf="@id/expandable_recyclerview_news_comment_dot"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/expandable_recyclerview_news_comment_add"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_add_comment"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>