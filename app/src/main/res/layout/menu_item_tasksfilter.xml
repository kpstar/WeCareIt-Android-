<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="32dp"
    android:orientation="horizontal"
    android:layout_marginRight="@dimen/padding_6dp">
    <TextView
        android:id="@+id/menu_item_tasks_filter_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="@string/all"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"/>
    <Switch
        android:id="@+id/menu_item_tasks_filter_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:theme="@style/SwitchTheme"
        android:layout_toRightOf="@+id/menu_item_tasks_filter_all"/>
    <TextView
        android:id="@+id/menu_item_tasks_filter_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="@string/mine"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/padding_10dp"
        android:layout_toRightOf="@+id/menu_item_tasks_filter_switch"/>
    <LinearLayout
        android:id="@+id/menu_item_tasks_filter_space3"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/menu_item_tasks_filter_mine"
        />
    <ImageView
        android:id="@+id/menu_item_tasks_filter_expand"
        android:layout_width="@dimen/width_32dp"
        android:layout_height="@dimen/height_32dp"
        android:background="@drawable/expand"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/menu_item_tasks_filter_space3"
        android:layout_marginRight="@dimen/padding_10dp"/>
</RelativeLayout>