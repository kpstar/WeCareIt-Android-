                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_32dp"
                        android:text="Generella"
                        android:textSize="@dimen/font_16sp"
                        android:textColor="@color/colorText"
                        android:background="@color/colorHeader"
                        android:paddingLeft="@dimen/padding_12dp"
                        android:gravity="center_vertical"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/fragment_document_general_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_6dp">

                    </android.support.v7.widget.RecyclerView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorLightGray"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/fragment_document_general_view_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SE ALLA DOKUMENT"
                            android:layout_marginRight="@dimen/padding_12dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@color/colorGreen"
                            android:textColor="@color/colorWhite"
                            android:layout_margin="@dimen/padding_6dp"
                            android:paddingLeft="@dimen/padding_10dp"
                            android:paddingRight="@dimen/padding_10dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
