<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_6dp">
    <RelativeLayout
        android:id="@+id/fragment_attendance_date_board"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/padding_6dp"
        android:padding="@dimen/padding_10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fragment_attendance_date"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_32dp"
            android:text="@string/heading"
            android:textColor="@color/colorGreen"
            android:textStyle="bold"
            android:textSize="@dimen/font_16sp"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/fragment_attendance_submit_status"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_32dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/font_16sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/fragment_attendance_date"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_attendance_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/fragment_attendance_date_board"
        android:layout_above="@+id/lnBottome_attendancefragment"
        android:layout_margin="@dimen/padding_6dp">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/lnBottome_attendancefragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/padding_6dp">
        <Button
            android:id="@+id/fragment_attendance_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SPARA"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="@dimen/padding_6dp"
            android:background="@color/colorGreenText"
            />
        <Button
            android:id="@+id/fragment_attendance_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SKICKA"
            android:layout_marginLeft="@dimen/padding_6dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorCleaarBtn"
            />
    </LinearLayout>
</RelativeLayout>