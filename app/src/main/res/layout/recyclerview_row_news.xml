<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/padding_6dp"
    android:layout_marginBottom="@dimen/padding_6dp"
    android:id="@+id/row_news">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_6dp"
        android:paddingTop="4dp"
        android:layout_gravity="center"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImg_newslist"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/nav_header_desc"
            android:gravity="center"
            app:srcCompat="@mipmap/ic_launcher_round" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_60dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/userImg_newslist">
            <TextView
                android:id="@+id/tvUsername_newslist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_settings"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:textSize="@dimen/font_18sp"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:gravity="top"
                />
            <TextView
                android:id="@+id/tvTime_newslist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textStyle="italic"
                android:textSize="@dimen/font_14sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnThreeDots_newslist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/padding_6dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivEdit_newslist"
                android:layout_width="@dimen/width_24dp"
                android:layout_height="@dimen/width_24dp"
                android:background="@drawable/ic_more" />

            <!--<ImageView
                android:id="@+id/ivDelete_newslist"
                android:layout_width="@dimen/width_32dp"
                android:layout_height="@dimen/height_32dp"
                android:background="@drawable/ic_circle_delete"
                />-->
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_6dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvMessage_newslist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_6dp"
            tools:context="ru.noties.markwon.MainActivity"
            android:textColor="@color/colorText"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/font_16sp"/>
        <TextView
            android:id="@+id/tvSeenBy_newslist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMessage_newslist"
            android:padding="@dimen/padding_6dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:textColor="@color/colorText"
            tools:context="ru.noties.markwon.MainActivity"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/font_16sp"/>
        <EditText
            android:id="@+id/etMessage_newslist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/hello_blank_fragment"
            android:gravity="center_vertical"
            android:textColor="@color/colorText"
            android:textSize="@dimen/font_16sp"
            android:layout_toLeftOf="@id/tvMessage_newslist"
            android:layout_alignParentLeft="true"
            android:visibility="gone" />
        <Button
            android:id="@+id/btnAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etMessage_newslist"
            android:text="@string/save"
            android:background="@color/colorGreenText"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_alignBaseline="@id/btnAccept"
            android:background="@color/colorCleaarBtn"
            android:layout_toLeftOf="@id/btnAccept"
            android:layout_marginRight="@dimen/padding_6dp"
            android:visibility="gone"/>
    </RelativeLayout>
    <LinearLayout
        android:paddingLeft="@dimen/padding_6dp"
        android:paddingRight="@dimen/padding_6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLightGray"/>
        <LinearLayout
            android:id="@+id/lnComment_newsfragment"
            android:paddingTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/btnRespond_newslist"
                android:layout_width="@dimen/height_32dp"
                android:layout_height="@dimen/height_32dp"
                android:background="@drawable/ic_comment"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_marginRight="@dimen/padding_12dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/respond"
                android:textColor="@color/colorText"
                android:textSize="@dimen/font_16sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_10dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_dot"
                />
            <TextView
                android:id="@+id/tvCommentnumber_newslist"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/response"
                android:textColor="@color/colorText"
                android:textSize="@dimen/font_16sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_10dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/editComent_newslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/lnList_newsrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_10dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/btnAddcomment_newslist"
                android:layout_marginRight="@dimen/padding_6dp"
                android:layout_width="@dimen/height_40dp"
                android:layout_height="@dimen/height_32dp"
                android:background="@drawable/upload"
                android:layout_alignParentRight="true"/>
            <EditText
                android:id="@+id/editAddcomment_neslist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/btnAddcomment_newslist"
                android:hint="@string/write"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>