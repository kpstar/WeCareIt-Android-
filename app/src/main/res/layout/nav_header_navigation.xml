<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorWhite"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_18dp"
    android:paddingLeft="@dimen/padding_18dp"
    android:paddingRight="@dimen/padding_18dp"
    android:paddingTop="@dimen/padding_18dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_100dp">
        <ImageView
            android:id="@+id/nav_header_logo_image"
            android:layout_width="@dimen/width_80dp"
            android:layout_height="@dimen/height_80dp"
            app:srcCompat="@drawable/ic_logo"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nav_header_profile_image"
            android:layout_width="@dimen/height_40dp"
            android:layout_height="@dimen/height_40dp"
            android:src="@drawable/ic_logo"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nav_header_profile_username"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="username"
                android:layout_marginLeft="4dp"
                android:textSize="@dimen/font_16sp"
                android:textColor="@color/colorGreen"
                android:gravity="center_vertical"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/nav_header_profile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:layout_marginLeft="4dp"
                android:textSize="@dimen/font_14sp"
                android:textColor="@color/colorGreen"
                android:gravity="center_vertical"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
