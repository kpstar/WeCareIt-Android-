<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="32dp"
    android:orientation="horizontal"
    android:layout_marginRight="@dimen/padding_6dp">
    <TextView
        android:id="@+id/menu_item_news_filter_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="@string/all"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"/>
    <Switch
        android:id="@+id/menu_item_news_filter_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:theme="@style/SwitchTheme"
        android:layout_toRightOf="@+id/menu_item_news_filter_all"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="@string/relevant"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/padding_10dp"
        android:layout_toRightOf="@+id/menu_item_news_filter_switch"/>
</RelativeLayout>